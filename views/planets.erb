  <body>

    <p>%DEBUG-I-PLANETS_RB, In views/planets.erb</p><br />
    <h2>Planets Admin</h2><br />

    <!-- Create a Table that displays all planets -->
    <table class="format">
      <!-- Table Header -->
      <thead>
        <tr>
          <th colspan="3">Name</th>
        </tr>
      </thead>
      <!-- Table Body -->
      <tbody>
        <% @planet_list.each do |planet| %>
        <tr>
          <!-- Column 1 -->
          <td>
            <a href=""><%= planet.name %></a>
          </td>
          <!-- Column 2 -->
          <td>
            <form method="GET" action="/planets_edit">
              <button type="submit" name="planet_id" value="<%= planet.id %>">Edit</button>
            </form>
          </td>
          <!-- Column 3 -->
          <td>
            <form method="POST" action="/planets_del">
              <button type="submit" name="planet_id" value="<%= planet.id %>">Delete</button>
            </form>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <!-- Planet Forms  -->
    <% if @orig_planet_id %>
      <!-- Edit Planet Form -->
      <h3>Edit</h3>
      <!--div-->
        <form method="POST" /action="/planets_edit">
          <fieldset>
            <legend><span>Edit Planet</span></legend>
            <input id="EDIT-id" type="hidden" name="upd_planet_id" value="<%= @orig_planet_id %>">
            <label for="EDIT-name">Planet Name: </label>
            <input id="EDIT-name" type="text" name="upd_planet_name" value="<%= @orig_planet_name %>" placeholder="<%= @orig_planet_name %>">
            <button type="submit" formmethod="POST" formaction="/planets_edit">Update</button>
            <button type="button"><a href="/planets" style="text-decoration: none;">Cancel</a></button>
          </fieldset>
        </form>
      <!--/div-->
    <% else %>
      <!-- Add Planet Form -->
      <h3>Add</h3>
      <!--div-->
        <form method="POST" action="/planets_add">
          <fieldset>
            <legend><span>Add Planet</span></legend>
            <label for="ADD-name">Planet Name: </label>
            <input id="ADD-name" type="text" name="name" placeholder="Planet Name">
            <button type="submit" formmethod="POST" formaction="/planets_add">Add</button>
          </fieldset>
        </form>
      <!--/div-->
    <% end %>

  </body>

</html>
